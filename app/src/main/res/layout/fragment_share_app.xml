<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/temp_id"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="Share app" />
    <TextView
        android:layout_below="@+id/share_but"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Find this app useful, kindly help us by sharing this with other people"
        />
    <ImageButton
        android:id="@+id/share_but"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@mipmap/shareus"
        android:layout_centerInParent="true"
        />



    <ImageView
        android:id="@+id/adv_img"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:scaleType="fitXY" />
</RelativeLayout>